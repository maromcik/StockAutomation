@model List<DataAccessLayer.Entities.HoldingSnapshot>

@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <title>Snapshots</title>
</head>
<style>
    .btn-danger {
        color: #dc3545;
        background-color: transparent;
        border: none;
    }
    .btn-danger i {
        font-size: 16px;
    }
</style>
<h2 class="text-center">Snapshots</h2>
<table class="table">
    <thead>
    <tr>

    <th>Snapshots</th>
    <th>Actions</th>

    </thead>
    <tbody>
    @foreach (var snapshot in Model)
    {
        <tr>
            <td>
                <p>@snapshot.DownloadedAt</p>
            </td>
            <td>
                <form method="post" action="@Url.Action("Delete", "Home", new { id = snapshot.Id })" onsubmit="return confirm('Are you sure you want to delete this snapshot?');">
                    <button type="submit" class="btn btn-danger" aria-label="Delete">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
